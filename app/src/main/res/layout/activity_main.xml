<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:visibility="visible">


    <FrameLayout
        android:id="@+id/roott"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="visible">


        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:alpha="256"
            android:fontFamily="monospace"
            android:shadowColor="@color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />


    </FrameLayout>

    <com.hgyu.seds.ShapeFieldView
        android:id="@+id/shapeField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
    <!-- Vertical button list -->
    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btnAdd"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="false"
            android:visibility="visible"
            app:icon="@android:drawable/ic_menu_directions" />

        <Button
            android:id="@+id/btnRemove"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:alpha="128"
            android:contentDescription="Remove blob"
            android:visibility="visible"
            app:icon="@android:drawable/ic_media_ff" />

        <Button
            android:id="@+id/btnfreez"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:alpha="128"
            android:contentDescription="Remove blob"
            android:visibility="visible"
            app:icon="@android:drawable/ic_media_pause" />

        <Button
            android:id="@+id/iconButton"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="lilss"
            android:visibility="visible"

            app:icon="@android:drawable/ic_menu_day" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="72dp"
        android:padding="0dp"
        android:visibility="visible">

        <SeekBar
            android:id="@+id/radiusSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="500"
            android:progress="100"
            android:visibility="visible">

        </SeekBar>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"

        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circle_shape"
        android:visibility="visible" />
</FrameLayout>
